<%- include('partials/header', {currentUser: currentUser}) %>

  <i class="fas fa-edit fa-6x"></i>
  <h1>Edit your jokes</h1>
  <p>Here you can edit or delete the jokes you posted.</p>
<hr>
<div class="jumbotron centered">
  <div class="container">

    <% postedJokes.forEach((joke) => {  %>
      <div class="joke-text m-4 p-4">
        <p><i class="fas fa-terminal text-warning"></i>&nbsp;&nbsp;<%= joke.joke %></p>
        <form class="delete-form" action="/delete" method="post">
          <button class="float-right icon-btns" type="submit" name="delete" value="<%= joke._id %>" data-toggle="tooltip" data-placement="bottom" title="Delete joke"><i class="far fa-trash-alt icon-btns-icons"></i></button>
        </form>
        <form class="update-form" action="/update" method="post">
          <button class="float-right icon-btns" type="submit" name="update" value="<%= joke._id %>" data-toggle="tooltip" data-placement="bottom" title="Edit joke"><i class="far fa-edit icon-btns-icons"></i></button>
        </form>
        </div>
    <%  }) %>

  </div>
</div>
<%- include('partials/footer') %>
