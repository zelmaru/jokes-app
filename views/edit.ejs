<%- include('partials/header', {currentUser: currentUser}) %>

  <i class="fas fa-edit fa-6x"></i>
  <h1>Edit posted jokes</h1>
  <p>Tap on the text to start editing.</p>
<hr>
<div class="jumbotron centered">
  <div class="container">

    <% postedJokes.forEach((joke) => {  %>
      <div class="joke-text m-4 joke-text-div-edit">

      <div class="form-group">
        <form class="update-form" action="/update" method="post">

        <textarea class="joke-text form-control text-center textarea-edit-joke" name="textarea"><%= joke.joke %></textarea>
        <button class="float-right icon-btns" type="submit" name="save" value="<%= joke._id %>" data-toggle="tooltip" data-placement="bottom" title="Save changes"><i class="fas fa-save icon-btns-icons yellow"></i></button>
      </form>
        <form class="delete-form" action="/delete" method="post">
        <input type="hidden" name="content" value="<%= joke.joke %>"/>
          <button class="float-right icon-btns" type="submit" name="delete" value="<%= joke._id %>" data-toggle="tooltip" data-placement="bottom" title="Delete joke"><i class="far fa-trash-alt icon-btns-icons"></i></button>
        </form>
        </div>
      </div>
    <%  }) %>

  </div>
</div>
<%- include('partials/footer') %>
