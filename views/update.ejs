<%- include('partials/header', {currentUser: currentUser}) %>

<i class="fas fa-edit fa-6x"></i>
<h1>Edit a joke</h1>
<p>Make changes to the text and hit save.</p>
<hr>
<div class="jumbotron centered">
  <div class="container">
    <form action="/updateJoke" method="post">
      <div class="form-group">
        <textarea class="joke-text form-control text-center" name="updatedContent" value=""><%= jokeText %></textarea>
      </div>
        <button class="btn btn-warning btn-lg" type="submit" name="saveUpdated">Save Changes</button>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
