<%- include('partials/header', {currentUser: currentUser}) %>

    <i class="fas fa-laptop-code fa-6x"></i>
    <h1>Programming Jokes</h1>
    <p>Know a good programming joke? Share it!</p>
    <a class="btn btn-warning btn-lg" href="/submit">Submit a joke!</a>
    <hr>
    <div class="jumbotron centered">
      <div class="container">
        <% usersWithJokes.forEach((user) => { %>
        <%  let arrayOfJokes = user.jokes %>
        <% arrayOfJokes.forEach((joke) => {  %>
          <div class="joke-text m-4 p-4">
            <p><i class="fas fa-terminal text-warning"></i>&nbsp;&nbsp;<%= joke.joke %></p>
            <form class="flag-inappropriate" action="/inaproppriate" method="post">
              <button class="float-right icon-btns" type="submit" name="flag-btn"  data-toggle="tooltip" data-placement="bottom" title="Flag as inappropriate"><i class="far fa-flag icon-btns-icons"></i></button>
            </form>
            <form class="like-heart" action="/favourites" method="post">
              <button class="float-right icon-btns" type="submit" name="like-btn"data-toggle="tooltip" data-placement="bottom" title="Add to favourites"><i class="far fa-heart icon-btns-icons"></i></button>
            </form>
          </div>

        <%  }) %>
        <% }) %>
      </div>
    </div>


