<%- include('partials/header', {currentUser: currentUser}) %>

    <i class="fas fa-random fa-6x"></i>
    <h1>Your random joke</h1>
    <p>Did ot make you laugh? Share it!</p>
    <a class="btn btn-warning btn-lg" href="/random">Get another one!</a>
    <hr>
    <div class="jumbotron centered">
      <div class="container">

        <% usersWithJokes.forEach((user) => { %>
          <%  let arrayOfJokes = user.jokes %>
        <%  let newArray = []; %>
          <% arrayOfJokes.forEach((joke) => {  %>
          <%  newArray.push(joke.joke); %>
          <%  const l = newArray.length; %>
          <%  let randomNumber = Math.floor(Math.random()*l) %>
          <%  let randomJoke = newArray[randomNumber]; %>

            <div class="joke-text m-4 p-4">
              <p><i class="fas fa-terminal text-warning"></i>&nbsp;&nbsp;<%= randomJoke %></p>
            </div>
            <%  }) %>
            <% }) %>
          </div>
    </div>

<%- include('partials/footer') %>
